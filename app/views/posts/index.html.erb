
<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
        <%# Find the user who created the post %>
        <% user = User.find_by({ "id" => post["user_id"] }) %>
        <%# Show their first name, or fallback to 'anonymous' %>
        <%= user ? user["first_name"] : "anonymous" %>
      </h4>
      <img src="<%= post["image"] %>" class="img-fluid w-full">
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>
